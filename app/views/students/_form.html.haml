= simple_form_for student do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :selected_date, as: :boolean, checked_value: true, unchecked_value: false
  .input-group.col-xs-6.col-md-3
    = f.input :birth_date, as: :date, start_year: Date.today.year - 60,
                              end_year: Date.today.year,
                              order: [:month, :year, :day]
  = f.association :subject_items, label_method: :title, value_method: :id, label: 'Subject Items', as: :check_boxes
  = link_to t('shared.back'), students_path, class: 'btn btn-default'
  = f.button :submit
